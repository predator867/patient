<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:id="@+id/lout_Notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txt_med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img"
            android:text="Test Name"
            android:textColor="@color/black"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/txt_phr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_med_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            android:text="Home Sampling Available"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_med_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_phr_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            android:text="100 pkr"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:text="Order Now"
            android:visibility="invisible" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
