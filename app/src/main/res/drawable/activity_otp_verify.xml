<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".manifest.OtpVerify">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_700">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Verify Code"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderr"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Enter the 6-digit code sent to "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_numbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/shownumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ids"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/opt1"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />

        <EditText
            android:id="@+id/opt2"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />

        <EditText
            android:id="@+id/opt3"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />

        <EditText
            android:id="@+id/opt4"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />

        <EditText
            android:id="@+id/opt5"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />

        <EditText
            android:id="@+id/opt6"
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/otp_numberbg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="Labelfor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_verify"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderr"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="5dp"
            android:text="Did not receive the OTP ?"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp_again"
                android:textColor="@drawable/clickable_text_back"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp_again"
                android:textColor="@drawable/clickable_text_back"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optlay"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_button"
        android:text="Verify"
        android:textColor="@color/white" />


